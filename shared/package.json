{
  "name": "@ai-news-platform/shared",
  "version": "1.0.0",
  "description": "Shared TypeScript interfaces and schemas for AI News Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
