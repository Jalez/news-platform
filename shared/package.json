  },
  "keywords": ["typescript", "interfaces", "api", "shared"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "openapi-typescript": "^6.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "src"
  ]
}